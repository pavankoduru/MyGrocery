<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nrtec.pavan.mygrocery.Main2Activity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:text="WheatFlour"
        android:id="@+id/b1"
        android:background="@mipmap/wheat"
        android:onClick="wflour"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:text="Greengram"
        android:id="@+id/b2"
        android:background="@mipmap/grrengram"
        android:onClick="greengram"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:text="cheese"
        android:id="@+id/b3"
        android:background="@mipmap/download"
        android:onClick="cheese"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:text="horsegram"
        android:id="@+id/b4"
        android:background="@mipmap/horsegram"
        android:onClick="hgram"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:text="wheatrava"
        android:id="@+id/b5"
        android:background="@mipmap/wrava"
        android:onClick="wrava"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:text="goodday bisc"
        android:id="@+id/b6"
        android:background="@mipmap/gooday"
        android:onClick="gbisc"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:text="boost"
        android:id="@+id/b7"
        android:background="@mipmap/boost"
        android:onClick="boost"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:text="sugar"
        android:id="@+id/b8"
        android:background="@mipmap/sugar"
        android:onClick="sugar"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:text="teapowder"
        android:id="@+id/b9"
        android:background="@mipmap/tpowder"
        android:onClick="teapowder"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="40sp"
            android:text="coffeepowder"
            android:id="@+id/b10"
            android:background="@mipmap/coffee"
            android:onClick="cofeee"/>
    </LinearLayout>



</ScrollView>
